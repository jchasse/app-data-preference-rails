<%= form_for @user do |f| %>

  <div>
    <%= f.label :first_name %>
    <br>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name %>
    <br>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :email %>
    <br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :mobile_number %>
    <br>
    <%= f.text_field :mobile_number %>
  </div>

  <div>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password, "Password Confirmation" %>
    <br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <br/>
    <%= f.submit %>
  </div>

<% end %>