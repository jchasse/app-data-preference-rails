<h3 class="h3 text-center user-heading"> <%= type_form %> </h3>

<%= form_for @user, html: {class: "main-form"} do |f| %>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
            </div>
            <div class="col">
                <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
            </div>
        </div>
    </div>
    <div class="form-group">   
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">   
        <%= f.telephone_field :mobile_number, class: "form-control", placeholder: "Mobile Phone Number" %>
    </div>
    <div class="form-group">   
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="form-group">   
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
    </div>
    <div class="text-center"> 
        <%= f.submit class: "btn btn-primary" %>
    </div

<% end %>
