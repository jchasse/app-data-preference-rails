<%=render partial: "application/messages", locals: {messages: @messages || [] } %>

<h3 class="h3 text-center user-heading"> Login </h3>

<!-- <form action="" class="main-form needs-validation" novalidate> -->
<%= form_tag login_path, method: :post, class: "main-form" do %>
    <div class="form-group">   
        <%= text_field_tag :email, "Email", class: "form-control" %>
    </div>
    <div class="form-group">   
        <%= password_field_tag :password, "", placeholder: "Password", class: "form-control" %>
    </div>
    <div class="form-group text-center">
        <%= submit_tag "Log In", class:"btn btn-primary" %>
    </div>

    <div class="row text-center">
        <div class="col-md-12">
            <%= link_to('Log in with Facebook!', '/auth/facebook') %>
        </div>
        <div class="col-md-6"> 
        </div>
    </div>

<% end %>
